<Window x:Class="PdfMarket.AdminClient.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:PdfMarket.AdminClient.ViewModels"
        xmlns:views="clr-namespace:PdfMarket.AdminClient.Views"
        Title="PDF Market – Admin"
        Height="600"
        Width="1000">

    <Window.Resources>
        <!-- View ↔ ViewModel mapping -->
        <DataTemplate DataType="{x:Type vm:StatsViewModel}">
            <views:StatsView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:PdfModerationViewModel}">
            <views:PdfModerationView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:UsersViewModel}">
            <views:UsersView />
        </DataTemplate>
    </Window.Resources>

    <DockPanel>
        <!-- TOP NAVIGATION -->
        <StackPanel DockPanel.Dock="Top"
                    Orientation="Horizontal"
                    Background="#2D2D30"
                    Height="45">

            <Button Content="Stats"
                    Command="{Binding ShowStatsCommand}"
                    Margin="8"
                    Padding="10,4"/>

            <Button Content="PDF Moderation"
                    Command="{Binding ShowPdfsCommand}"
                    Margin="8"
                    Padding="10,4"/>

            <Button Content="Users"
                    Command="{Binding ShowUsersCommand}"
                    Margin="8"
                    Padding="10,4"/>
        </StackPanel>

        <!-- MAIN CONTENT -->
        <ContentControl Content="{Binding CurrentViewModel}" />
    </DockPanel>
</Window>
