<UserControl x:Class="PdfMarket.AdminClient.Views.UsersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <Grid Margin="12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2.2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top bar -->
        <DockPanel Grid.Row="0"
                   Grid.ColumnSpan="2"
                   LastChildFill="True">

            <Button Content="Refresh"
                    Width="100"
                    Margin="0,0,8,0"
                    Command="{Binding RefreshCommand}"
                    DockPanel.Dock="Left"/>

            <TextBlock Text="{Binding ErrorMessage}"
                       Foreground="Red"
                       VerticalAlignment="Center"
                       TextWrapping="Wrap"/>
        </DockPanel>

        <!-- Users list (LEFT) -->
        <DataGrid Grid.Row="1"
                  Grid.Column="0"
                  Margin="0,8,8,0"
                  ItemsSource="{Binding Users}"
                  SelectedItem="{Binding SelectedUser}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  SelectionMode="Single"
                  SelectionUnit="FullRow"
                  HeadersVisibility="Column"
                  GridLinesVisibility="Horizontal"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch">

            <DataGrid.Columns>
                <DataGridTextColumn Header="UserName"
                                    Binding="{Binding UserName}"
                                    Width="140"/>

                <DataGridTextColumn Header="Email"
                                    Binding="{Binding Email}"
                                    Width="2*"/>

                <DataGridTextColumn Header="Points"
                                    Binding="{Binding PointsBalance}"
                                    Width="90"/>

                <DataGridTextColumn Header="Uploads"
                                    Binding="{Binding TotalUploads}"
                                    Width="80"/>

                <DataGridTextColumn Header="Buys"
                                    Binding="{Binding TotalPurchases}"
                                    Width="70"/>

                <DataGridTextColumn Header="Id"
                                    Binding="{Binding Id}"
                                    Width="260"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Edit panel (RIGHT) -->
        <Border Grid.Row="1"
                Grid.Column="1"
                Margin="0,8,0,0"
                Padding="12"
                BorderThickness="1"
                BorderBrush="LightGray"
                VerticalAlignment="Top">

            <StackPanel>
                <TextBlock Text="Edit selected user"
                           FontWeight="Bold"
                           Margin="0,0,0,12"/>

                <!-- Email -->
                <TextBlock Text="Email"/>
                <TextBox Text="{Binding EditEmail, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,0,0,8"/>

                <!-- Points -->
                <TextBlock Text="Points"/>
                <TextBox Text="{Binding EditPoints, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,0,0,8"/>

                <Button Content="Save changes"
                        Width="140"
                        Margin="0,4,0,12"
                        Command="{Binding SaveCommand}" />

                <Separator Margin="0,8"/>

                <TextBlock Text="Reset password"
                           FontWeight="Bold"
                           Margin="0,8,0,4"/>

                <PasswordBox x:Name="NewPasswordBox"
                             Margin="0,0,0,8"
                             PasswordChanged="NewPasswordBox_OnPasswordChanged"/>

                <Button Content="Reset password"
                        Width="140"
                        Command="{Binding ResetPasswordCommand}"/>

                <TextBlock Foreground="Gray"
                           TextWrapping="Wrap"
                           Margin="0,12,0,0"
                           Text="Save changes updates email/points. Reset password calls POST /api/admin/users/{userId}/reset-password."/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
