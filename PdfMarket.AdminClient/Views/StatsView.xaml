<UserControl x:Class="PdfMarket.AdminClient.Views.StatsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="16">
        <StackPanel>
            <TextBlock Text="Platform Statistics" FontSize="20" Margin="0,0,0,12"/>

            <ProgressBar Height="20" Minimum="0" Maximum="100"
                         Value="{Binding Progress}" Margin="0,0,0,12"/>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Total Users: " FontWeight="Bold"/>
                <TextBlock Text="{Binding Stats.TotalUsers}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Total PDFs: " FontWeight="Bold"/>
                <TextBlock Text="{Binding Stats.TotalPdfs}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Total Purchases: " FontWeight="Bold"/>
                <TextBlock Text="{Binding Stats.TotalPurchases}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Total Points in System: " FontWeight="Bold"/>
                <TextBlock Text="{Binding Stats.TotalPointsInSystem}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
